@page "/"

<PageTitle>EventEase — Home</PageTitle>

<div class="d-flex flex-column min-vh-100">
    <section class="py-5 d-flex">
        <div class="container text-center">
            <h1 class="display-5 fw-bold">Plan events effortlessly</h1>
            <p class="lead text-body-secondary mb-4">
                Browse upcoming events, check details, and register in a click.
            </p>
            <div class="d-flex gap-2 justify-content-center">
                <a href="/events" class="btn btn-primary btn-lg px-4">Browse events</a>
            </div>
        </div>
    </section>

    <section class="py-4">
        <div class="container">
            <div class="row row-cols-1 row-cols-md-3 g-3 text-center">
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="fs-2 mb-2">🔎</div>
                            <h3 class="h5">Quick search</h3>
                            <p class="text-body-secondary mb-0">Find events by name or location instantly.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="fs-2 mb-2">➡️</div>
                            <h3 class="h5">Smooth flow</h3>
                            <p class="text-body-secondary mb-0">Move between list, details and registration.</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="fs-2 mb-2">🚀</div>
                            <h3 class="h5">Ready to grow</h3>
                            <p class="text-body-secondary mb-0">Built on .NET + Blazor for scale.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="pb-5">
        <div class="container">
            <h2 class="h6 text-center text-uppercase text-body-secondary mb-3">Featured events</h2>
            <div class="row row-cols-1 row-cols-md-3 g-3">
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h4 class="h6 mb-1">Tech Summit</h4>
                            <p class="text-body-secondary mb-0">Chicago, IL — Oct 12</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h4 class="h6 mb-1">Gala Night</h4>
                            <p class="text-body-secondary mb-0">New York, NY — Oct 28</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h4 class="h6 mb-1">Sales Kickoff</h4>
                            <p class="text-body-secondary mb-0">Austin, TX — Nov 10</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
