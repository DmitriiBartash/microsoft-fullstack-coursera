@using Microsoft.AspNetCore.Components.Routing

<div class="top-row ps-3 navbar navbar-light">
    <div class="container-fluid">
        <a class="navbar-brand brand-planora" href="/">
            <span class="brand-mark">P</span>
            <span class="brand-word">Planora</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').checked=false">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/events" Match="NavLinkMatch.All">
                <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Events
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/events/new" Match="NavLinkMatch.All">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Add event
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/contact" Match="NavLinkMatch.All">
                <span class="bi bi-envelope-nav-menu" aria-hidden="true"></span> Contact
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/about" Match="NavLinkMatch.All">
                <span class="bi bi-info-circle-nav-menu" aria-hidden="true"></span> About
            </NavLink>
        </div>
    </nav>
</div>
