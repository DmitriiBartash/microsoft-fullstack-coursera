@page "/"
@using AsyncApi.Models
@inject IHttpClientFactory HttpClientFactory
@rendermode InteractiveServer

<PageTitle>AsyncApi - Home</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>ðŸ‘¥ User Management</h1>
        <p>Fetch and display users from JSONPlaceholder API using async calls</p>
    </div>

    <div class="card">
        <div class="action-bar">
            <div class="stats">
                @if (users.Any())
                {
                    <span class="stat-badge">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        @users.Count Users Loaded
                    </span>
                    <span class="stat-badge">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        @lastFetchTime
                    </span>
                }
            </div>

            <div class="button-group">
                <button class="btn-primary" @onclick="FetchUsersAsync" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner"></span>
                        <span>Loading...</span>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                            <polyline points="7 10 12 15 17 10"></polyline>
                            <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                        <span>Fetch New Users</span>
                    }
                </button>

                @if (users.Any())
                {
                    <button class="btn-secondary" @onclick="ClearUsers">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="3 6 5 6 21 6"></polyline>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        </svg>
                        <span>Clear</span>
                    </button>
                }
            </div>
        </div>

        @if (isLoading)
        {
            <div class="loading-container">
                <div class="spinner-large"></div>
                <p>Fetching users from API...</p>
            </div>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-container">
                <div class="error-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="15" y1="9" x2="9" y2="15"></line>
                        <line x1="9" y1="9" x2="15" y2="15"></line>
                    </svg>
                </div>
                <h3>Oops! Something went wrong</h3>
                <p>@errorMessage</p>
                <button class="btn-primary" @onclick="FetchUsersAsync">Try Again</button>
            </div>
        }
        else if (!users.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <h3>No Users Loaded</h3>
                <p>Click the "Fetch New Users" button to load user data from the API</p>
            </div>
        }
        else
        {
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in users)
                        {
                            <tr>
                                <td><strong>#@user.Id</strong></td>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-avatar">@GetInitials(user.Name)</div>
                                        <div class="user-info">
                                            <div class="name">@user.Name</div>
                                            <div class="username">@@@user.Username</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="email">@user.Email</td>
                                <td class="address">@user.Address?.FullAddress</td>
                                <td>@user.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<User> users = new();
    private bool isLoading = false;
    private string? errorMessage = null;
    private string lastFetchTime = "";

    private async Task FetchUsersAsync()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            users = await httpClient.GetFromJsonAsync<List<User>>(
                "https://jsonplaceholder.typicode.com/users"
            ) ?? new();
            lastFetchTime = DateTime.Now.ToString("HH:mm:ss");
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Network error: {ex.Message}";
            users = new();
        }
        catch (Exception ex)
        {
            errorMessage = $"An unexpected error occurred: {ex.Message}";
            users = new();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ClearUsers()
    {
        users = new();
        errorMessage = null;
        lastFetchTime = "";
    }

    private string GetInitials(string? name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name.Substring(0, Math.Min(2, name.Length)).ToUpper();
    }
}