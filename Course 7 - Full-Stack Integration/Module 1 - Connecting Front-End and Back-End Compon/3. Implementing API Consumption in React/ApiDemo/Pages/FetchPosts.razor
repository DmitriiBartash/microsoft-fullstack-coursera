@page "/fetch-posts"
@using ApiDemo.Models
@inject HttpClient Http

<h3 class="mt-3 mb-4 fw-bold text-primary">Posts</h3>

@if (isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" role="status"></div>
    </div>
}
else if (error)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> Failed to load posts. Please try again later.
    </div>
}
else if (posts is not null)
{
    <table class="table table-hover table-striped shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in posts)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.Body</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No data available.</div>
}

@code {
    private List<Post>? posts = null;
    private bool isLoading = true;
    private bool error = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            posts = await Http.GetFromJsonAsync<List<Post>>(
                "https://jsonplaceholder.typicode.com/posts");
        }
        catch
        {
            error = true;
        }
        finally
        {
            isLoading = false;
        }
    }
}
