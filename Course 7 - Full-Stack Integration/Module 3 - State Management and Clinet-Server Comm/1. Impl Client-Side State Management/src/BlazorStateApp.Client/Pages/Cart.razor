@page "/cart"
@inject Blazored.SessionStorage.ISessionStorageService SessionStorage

<div class="alert alert-info mb-4">
    <div class="d-flex align-items-center">
        <i class="bi bi-info-circle fs-4 me-3"></i>
        <div>
            <strong>Session Storage Demo</strong>
            <p class="mb-0 small">Compare products side by side. Data clears when browser closes.</p>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-warning d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-star me-2"></i>Compare Products
        </h5>
        @if (_compareProducts.Count > 0)
        {
            <span class="badge bg-dark">@_compareProducts.Count / 4</span>
        }
    </div>
    <div class="card-body">
        @if (_isLoading)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-warning" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (_compareProducts.Count == 0)
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-star display-1"></i>
                <h5 class="mt-3">No products to compare</h5>
                <p class="small">Click the compare icon on products to add them here (max 4)</p>
                <a href="/" class="btn btn-outline-warning">
                    <i class="bi bi-arrow-left me-1"></i>Browse Products
                </a>
            </div>
        }
        else
        {
            <div class="row row-cols-2 row-cols-md-4 g-3 mb-4">
                @foreach (var productName in _compareProducts)
                {
                    var product = ProductCatalog.GetByName(productName);
                    if (product != null)
                    {
                        <div class="col">
                            <div class="card h-100 border-warning">
                                <div class="card-body text-center position-relative">
                                    <button class="btn btn-sm btn-outline-danger position-absolute top-0 end-0 m-1"
                                            @onclick="() => RemoveFromCompare(productName)"
                                            title="Remove">
                                        <i class="bi bi-x"></i>
                                    </button>
                                    <div class="display-4 mb-2">@product.Icon</div>
                                    <h6 class="card-title mb-1">@product.Name</h6>
                                    <span class="badge bg-secondary mb-2">@product.Category</span>
                                    <p class="h5 text-primary mb-0">$@product.Price.ToString("F2")</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="text-end">
                <button class="btn btn-outline-danger btn-sm" @onclick="ClearCompare">
                    <i class="bi bi-trash me-1"></i>Clear All
                </button>
            </div>
        }
    </div>
</div>

@if (_compareProducts.Count >= 2)
{
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="bi bi-table me-2"></i>Comparison Table
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-striped mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 120px;">Feature</th>
                            @foreach (var productName in _compareProducts)
                            {
                                var product = ProductCatalog.GetByName(productName);
                                if (product != null)
                                {
                                    <th class="text-center">
                                        <div class="fs-3">@product.Icon</div>
                                        <div>@product.Name</div>
                                    </th>
                                }
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>Price</strong></td>
                            @foreach (var productName in _compareProducts)
                            {
                                var product = ProductCatalog.GetByName(productName);
                                <td class="text-center">
                                    <span class="h5 text-primary">$@(product?.Price.ToString("F2") ?? "-")</span>
                                </td>
                            }
                        </tr>
                        <tr>
                            <td><strong>Category</strong></td>
                            @foreach (var productName in _compareProducts)
                            {
                                var product = ProductCatalog.GetByName(productName);
                                <td class="text-center">
                                    <span class="badge bg-secondary fs-6">@(product?.Category ?? "-")</span>
                                </td>
                            }
                        </tr>
                        <tr>
                            <td><strong>Price Rank</strong></td>
                            @{
                                var sortedByPrice = _compareProducts
                                    .Select(p => ProductCatalog.GetByName(p))
                                    .Where(p => p != null)
                                    .OrderBy(p => p!.Price)
                                    .ToList();
                            }
                            @foreach (var productName in _compareProducts)
                            {
                                var product = ProductCatalog.GetByName(productName);
                                var rank = sortedByPrice.IndexOf(product) + 1;
                                var badgeClass = rank == 1 ? "bg-success" : rank == sortedByPrice.Count ? "bg-danger" : "bg-secondary";
                                var label = rank == 1 ? "Best Price" : rank == sortedByPrice.Count ? "Highest" : $"#{rank}";
                                <td class="text-center">
                                    <span class="badge @badgeClass fs-6">@label</span>
                                </td>
                            }
                        </tr>
                        <tr>
                            <td><strong>Value</strong></td>
                            @{
                                var minPrice = sortedByPrice.FirstOrDefault()?.Price ?? 0;
                            }
                            @foreach (var productName in _compareProducts)
                            {
                                var product = ProductCatalog.GetByName(productName);
                                var savings = product != null ? product.Price - minPrice : 0;
                                <td class="text-center">
                                    @if (savings == 0)
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="bi bi-check-circle-fill me-1"></i>Best Deal
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            +$@savings.ToString("F2") more
                                        </span>
                                    }
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="card shadow-sm bg-body-tertiary mt-4">
    <div class="card-body py-2">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <small class="text-muted">
                <i class="bi bi-clock-history me-1"></i>
                Compare list stored in <strong>SessionStorage</strong> (cleared when browser closes)
            </small>
            <button class="btn btn-outline-danger btn-sm" @onclick="ClearCompare">
                <i class="bi bi-trash me-1"></i>Clear Session Data
            </button>
        </div>
    </div>
</div>

@code {
    private const string CompareKey = "compare-products";

    private List<string> _compareProducts = new();
    private bool _isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _compareProducts = await SessionStorage.GetItemAsync<List<string>>(CompareKey) ?? new();
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RemoveFromCompare(string productName)
    {
        _compareProducts.Remove(productName);
        await SessionStorage.SetItemAsync(CompareKey, _compareProducts);
    }

    private async Task ClearCompare()
    {
        _compareProducts.Clear();
        await SessionStorage.RemoveItemAsync(CompareKey);
    }
}
